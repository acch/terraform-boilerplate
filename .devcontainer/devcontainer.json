{
  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "hashicorp.terraform",
        "redhat.vscode-yaml"
      ]
    }
  },

  "securityOpt": ["label=disable"],
  "mounts": [],

  "workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/src,ro=false",
  "workspaceFolder": "/src",

  "remoteEnv": {}
}
